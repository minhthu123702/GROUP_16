<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD7F8">

    <!-- Thanh header màu xanh -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="#275F8A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon người dùng (user profile) -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="49dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/user"
        app:layout_constraintTop_toTopOf="@id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="30dp" />

    <!-- Icon menu 3 gạch -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="58dp"
        android:layout_height="42dp"
        app:srcCompat="@drawable/menu"
        app:layout_constraintTop_toTopOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp" />

    <!-- Nút Báo cáo thống kê -->
    <Button
        android:id="@+id/button9"
        android:layout_width="160dp"
        android:layout_height="154dp"
        android:text="Báo cáo thống kê"
        android:textColor="#070707"
        android:textSize="16sp"
        android:backgroundTint="#AFD9FB"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="260dp"/>

    <!-- Nút Quản lý người dùng -->
    <Button
        android:id="@+id/button8"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:text="Quản lý người dùng"
        android:textColor="#000000"
        android:backgroundTint="#AFD9FB"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        android:layout_marginTop="80dp"/>

    <!-- Nút Quản lý danh mục dịch vụ -->
    <Button
        android:id="@+id/button7"
        android:layout_width="153dp"
        android:layout_height="157dp"
        android:text="Quản lý danh mục dịch vụ"
        android:textColor="#090909"
        android:backgroundTint="#AFD9FB"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        android:layout_marginTop="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
