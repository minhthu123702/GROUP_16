<?xml version="1.0" encoding="utf-8"?>
<!-- Main container cho dialog delete service -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edittext_background"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header với nút close -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Nút đóng dialog -->
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Đóng" />

    </RelativeLayout>

    <!-- Text xác nhận xóa -->
    <TextView
        android:id="@+id/tv_confirm_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Bạn có chắc chắn xóa?"
        android:textColor="#4A90E2"
        android:textSize="18sp"
        android:textStyle="normal" />

    <!-- Container cho 2 nút action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Nút Đồng ý -->
        <Button
            android:id="@+id/btn_agree"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#4A90E2"
            android:text="Đồng ý"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="normal" />

        <!-- Nút Không -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:text="Không"
            android:textColor="#4A90E2"
            android:textSize="16sp"
            android:textStyle="normal"
            app:strokeColor="#34A4FF"
            app:strokeWidth="1dp" />

    </LinearLayout>

</LinearLayout>