<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3FFFFFF"> <!-- nền trắng mờ đè lên -->

    <!-- Background sóng nước -->
    <ImageView
        android:id="@+id/imgWave"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Hai nút chức năng -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="20dp">

        <!-- Quản lý nhà cung cấp -->
        <Button
            android:id="@+id/btnStatCategory"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Thông kê theo danh mục"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:backgroundTint="#AFD9FB"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Quản lý khách hàng -->
        <Button
            android:id="@+id/btnStatArea"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Thống ke theo khu vực"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:backgroundTint="#AFD9FB"
            app:cornerRadius="16dp"
            android:elevation="4dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
