<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7FBFF">

        <!-- Bộ lọc: ngày & danh mục -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filterGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp">

            <!-- Icon quay lại -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/back1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Từ ngày -->
            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="Từ:"
                android:textColor="#222"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtFromDate"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_edittext"
                android:focusable="false"
                android:hint="01/01"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/tvFrom"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Đến ngày -->
            <TextView
                android:id="@+id/tvTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Đến:"
                android:textColor="#222"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/edtFromDate"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtToDate"
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_edittext"
                android:focusable="false"
                android:hint="12/23"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/tvTo"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Spinner chọn danh mục với nền xanh bo tròn -->
            <Spinner
                android:id="@+id/spinCategory"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_btn_blue"
                app:layout_constraintStart_toEndOf="@id/edtToDate"
                app:layout_constraintTop_toTopOf="parent"
                android:popupBackground="#FFF" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvStatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Thống kê theo danh mục theo tháng"
            android:textColor="#222"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filterGroup" />

        <!-- Biểu đồ cột (BarChart) -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStatTitle" />

        <!-- Sóng đáy màn hình -->
        <ImageView
            android:id="@+id/wave"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_wave_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
