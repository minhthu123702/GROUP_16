<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_snackbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg" android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_margin="16dp"
    android:elevation="6dp">

    <ImageView
        android:id="@+id/snackbar_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close" android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/snackbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thao tác thành công!"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>