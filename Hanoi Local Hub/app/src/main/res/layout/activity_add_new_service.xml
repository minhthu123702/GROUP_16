<?xml version="1.0" encoding="utf-8"?>
<!-- Layout chính cho màn hình thêm dịch vụ -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header với tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="32dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm mới dịch vụ"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- Nội dung form cuộn được -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="24dp">

            <!-- Section thêm hình ảnh -->

            <!-- Các trường nhập liệu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">



                <!-- Nút thêm ảnh hình tròn -->
                <!-- Section thêm hình ảnh -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Thêm hình ảnh (Tối đa 2 ảnh)"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="" />

                    <!-- Hàng ngang chứa nút và 2 ảnh -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Nút thêm ảnh -->
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_add"
                            app:backgroundTint="@color/accent_blue"
                            app:tint="@android:color/white"
                            android:contentDescription="Add new service" />

                        <!-- Ảnh xem trước 1 -->
                        <ImageView
                            android:id="@+id/imagePreview1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:background=""
                            />

                        <!-- Ảnh xem trước 2 -->
                        <ImageView
                            android:id="@+id/imagePreview2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background=""
                             />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tên dịch vụ -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Tên dịch vụ"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/accent_blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:paddingHorizontal="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mô tả -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Mô tả chi tiết"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/accent_blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Chi phí -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Chi phí"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/accent_blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:paddingHorizontal="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Giờ làm việc -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Giờ làm việc"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/accent_blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:paddingHorizontal="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Số điện thoại -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Số điện thoại"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/accent_blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="phone"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:paddingHorizontal="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Email"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/accent_blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:paddingHorizontal="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Port, bảng cấp -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="Port, bảng cấp..."
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/accent_blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="text"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"
                        android:paddingHorizontal="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Các nút hành động ở cuối -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:background="@color/background_light">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:text="Thêm mới"
            app:backgroundTint="#34A4FF"

            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cornerRadius="24dp"
            app:backgroundTint="#34A4FF"
            android:text="Hủy"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>