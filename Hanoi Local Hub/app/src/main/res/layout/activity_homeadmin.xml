<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- THÔNG TIN USER (GHÉP VÀO ĐÂY) -->


    <!-- HEADER SEARCH -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#296191">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:hint="Tìm kiếm"
            android:textColor="#fff"
            android:background="@android:color/white"
            android:paddingLeft="16dp"
            android:paddingRight="40dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#888"
            android:layout_alignTop="@id/edtSearch"
            android:layout_alignBottom="@id/edtSearch"
            android:layout_alignRight="@id/edtSearch"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:background="#296191"
            app:srcCompat="@drawable/vector" />

    </RelativeLayout>
<!--    <include-->
<!--        layout="@layout/item_user"-->
<!--        android:id="@+id/itemUser"/>-->
    <!-- DANH SÁCH NGƯỜI DÙNG (DÙNG 1 RECYCLERVIEW LÀ ĐỦ) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="8dp"/>
</LinearLayout>
