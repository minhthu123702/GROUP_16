<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:orientation="vertical">

        <!-- Main Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_large"
            android:paddingVertical="@dimen/margin_extra_large"
            android:gravity="center_vertical">

            <!-- Back Icon -->
            <ImageView
                android:layout_width="@dimen/icon_medium"
                android:layout_height="@dimen/icon_medium"
                android:src="@drawable/ic_arrow_right" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dịch vụ của tôi"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>

    <!-- Body Section with weight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_large">

        <!-- Tabs Section -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/margin_large">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/margin_medium">

                <!-- Tab: Đang hiển thị -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang hiển thị"
                        android:textColor="@color/accent_blue"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/accent_blue" />
                </LinearLayout>

                <!-- Tab: Đang chờ duyệt -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang chờ duyệt"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <!-- Tab: Bị từ chối -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bị từ chối"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <!-- Tab: Đã xóa -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã xóa"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="sans-serif-medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginBottom="@dimen/margin_large" />

        <!-- Content Section with FAB overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_add"
                app:backgroundTint="@color/accent_blue"
                app:tint="@color/white" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
