<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/margin_large"
            android:paddingVertical="@dimen/margin_extra_large">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/icon_medium"
                android:layout_height="@dimen/icon_medium"
                android:src="@drawable/ic_arrow_right" /> <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Dịch vụ của tôi"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_large">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/margin_large">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tab_showing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:id="@+id/text_showing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang hiển thị"
                        android:textColor="@color/accent_blue"
                        android:textSize="@dimen/text_medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:id="@+id/line_showing"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/accent_blue" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:id="@+id/text_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang chờ duyệt"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:id="@+id/line_pending"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_rejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:id="@+id/text_rejected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bị từ chối"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:id="@+id/line_rejected"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_deleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:minWidth="@dimen/tab_min_width">

                    <TextView
                        android:id="@+id/text_deleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã ẩn"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_medium"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_gravity="center" />

                    <View
                        android:id="@+id/line_deleted"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginBottom="@dimen/margin_large" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_empty_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không có dịch vụ nào."
                android:layout_gravity="center"
                android:visibility="gone"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:src="@drawable/ic_add"
                app:backgroundTint="@color/accent_blue"
                app:tint="@color/white"
                android:contentDescription="Thêm dịch vụ mới"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>